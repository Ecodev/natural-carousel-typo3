<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <selection>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:natural_carousel/Resources/Private/Language/locallang.xlf:flexform.tab.source
                    </sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.images>
                        <TCEforms>
                            <label>LLL:EXT:lang/locallang_general.xlf:LGL.images</label>
                            <config>
                                <type>inline</type>
                                <appearance type="array">
                                    <createNewRelationLinkTitle>LLL:EXT:natural_carousel/Resources/Private/Language/locallang.xlf:settings.images.new
                                    </createNewRelationLinkTitle>
                                    <enabledControls type="array">
                                        <delete>1</delete>
                                        <dragdrop>1</dragdrop>
                                        <hide>1</hide>
                                        <info>1</info>
                                        <localize>1</localize>
                                    </enabledControls>
                                    <headerThumbnail type="array">
                                        <field>uid_local</field>
                                        <height>45c</height>
                                        <width>45</width>
                                    </headerThumbnail>
                                    <useSortable>1</useSortable>
                                </appearance>
                                <foreign_types type="array">
                                    <numIndex index="2" type="array">
                                        <showitem>
                                            --palette--;LLL:EXT:lang/locallang_tca.xlf:sys_file_reference.imageoverlayPalette;imageoverlayPalette,--palette--;;filePalette
                                        </showitem>
                                    </numIndex>
                                </foreign_types>
                                <behaviour type="array">
                                    <localizationMode>select</localizationMode>
                                    <localizeChildrenAtParentLocalization>1</localizeChildrenAtParentLocalization>
                                </behaviour>
                                <filter type="array">

                                </filter>
                                <foreign_field>uid_foreign</foreign_field>
                                <foreign_label>uid_local</foreign_label>
                                <foreign_match_fields type="array">
                                    <fieldname>images</fieldname>
                                </foreign_match_fields>
                                <foreign_selector>uid_local</foreign_selector>
                                <foreign_selector_fieldTcaOverride type="array">
                                    <config type="array">
                                        <appearance type="array">
                                            <elementBrowserAllowed>gif,jpg,jpeg,png,svg
                                            </elementBrowserAllowed>
                                            <elementBrowserType>file</elementBrowserType>
                                        </appearance>
                                    </config>
                                </foreign_selector_fieldTcaOverride>
                                <foreign_sortby>sorting_foreign</foreign_sortby>
                                <foreign_table>sys_file_reference</foreign_table>
                                <foreign_table_field>tablenames</foreign_table_field>
                                <maxitems>100</maxitems>
                                <minitems>0</minitems>
                            </config>
                        </TCEforms>
                    </settings.images>


                </el>
            </ROOT>
        </selection>

        <sorting>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:natural_carousel/Resources/Private/Language/locallang.xlf:flexform.tab.sorting
                    </sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                </el>
            </ROOT>
        </sorting>

        <slideSettings>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Slide settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.autoplay>
                        <TCEforms>
                            <label>
                                Wait time
                            </label>
                            <config>
                                <type>input</type>
                                <default></default>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.autoplay>
                    <settings.speed>
                        <TCEforms>
                            <label>Transition time</label>
                            <config>
                                <type>input</type>
                                <default></default>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.speed>
                    <settings.loop>
                        <TCEforms>
                            <label>
                                Loop
                            </label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.loop>
                    <settings.slidesPerView>
                        <TCEforms>
                            <label>
                                Slides per view
                            </label>
                            <config>
                                <type>input</type>
                                <default>1</default>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.slidesPerView>
                    <settings.slideHeight>
                        <TCEforms>
                            <label>
                                Slide height
                            </label>
                            <config>
                                <type>input</type>
                                <default>400</default>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.slideHeight>
                    <!--<settings.showThumbnails>-->
                        <!--<TCEforms>-->
                            <!--<label>-->
                                <!--Show thumbnails-->
                            <!--</label>-->
                            <!--<config>-->
                                <!--<type>check</type>-->
                                <!--<default>0</default>-->
                            <!--</config>-->
                        <!--</TCEforms>-->
                    <!--</settings.showThumbnails>-->
                </el>
            </ROOT>
        </slideSettings>


    </sheets>
</T3DataStructure>
