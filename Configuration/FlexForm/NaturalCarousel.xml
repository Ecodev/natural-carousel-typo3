<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <selection>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:natural_carousel/Resources/Private/Language/locallang.xlf:flexform.tab.source
                    </sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.images>
                        <TCEforms>
                            <label>LLL:EXT:core/Resources/Private/Language/locallang_general.xlf:LGL.images</label>
                            <config>
                                <type>inline</type>
                                <foreign_field>uid_foreign</foreign_field>
                                <foreign_label>uid_local</foreign_label>
                                <foreign_match_fields type="array">
                                    <fieldname>images</fieldname>
                                </foreign_match_fields>
                                <foreign_selector>uid_local</foreign_selector>
                                <foreign_selector_fieldTcaOverride type="array">
                                    <config>
                                        <appearance>
                                            <elementBrowserAllowed>gif,jpg,jpeg,png,svg</elementBrowserAllowed>
                                            <elementBrowserType>file</elementBrowserType>
                                        </appearance>
                                    </config>
                                </foreign_selector_fieldTcaOverride>
                                <foreign_sortby>sorting_foreign</foreign_sortby>
                                <foreign_table>sys_file_reference</foreign_table>
                                <foreign_table_field>tablenames</foreign_table_field>
                                <maxitems>100</maxitems>
                                <minitems>0</minitems>
                                <appearance type="array">
                                    <newRecordLinkAddTitle>1</newRecordLinkAddTitle>
                                    <headerThumbnail>
                                        <field>uid_local</field>
                                        <height>64</height>
                                        <width>64</width>
                                    </headerThumbnail>
                                    <enabledControls>
                                        <info>1</info>
                                        <new>0</new>
                                        <dragdrop>0</dragdrop>
                                        <sort>1</sort>
                                        <hide>0</hide>
                                        <delete>1</delete>
                                        <localize>1</localize>
                                    </enabledControls>
                                    <createNewRelationLinkTitle>
                                        LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:images.addFileReference
                                    </createNewRelationLinkTitle>
                                </appearance>
                                <foreign_types>
                                    <numIndex index="0">
                                        <showitem>
                                            --palette--;LLL:EXT:lang/locallang_tca.xlf:sys_file_reference.imageoverlayPalette;imageoverlayPalette,--palette--;;filePalette
                                        </showitem>
                                    </numIndex>
                                    <numIndex index="2">
                                        <showitem>
                                            --palette--;LLL:EXT:lang/locallang_tca.xlf:sys_file_reference.imageoverlayPalette;imageoverlayPalette,--palette--;;filePalette
                                        </showitem>
                                    </numIndex>
                                </foreign_types>
                                <behaviour>
                                    <localizationMode>select</localizationMode>
                                    <localizeChildrenAtParentLocalization>1</localizeChildrenAtParentLocalization>
                                </behaviour>

                                <overrideChildTca>
                                    <columns type="array">
                                        <uid_local type="array">
                                            <config type="array">
                                                <appearance type="array">
                                                    <elementBrowserType>file</elementBrowserType>
                                                    <elementBrowserAllowed>jpg,png,svg,jpeg,gif</elementBrowserAllowed>
                                                </appearance>
                                            </config>
                                        </uid_local>
                                    </columns>
                                    <types type="array">
                                        <numIndex index="2">
                                            <showitem>
                                                --palette--;LLL:EXT:lang/locallang_tca.xlf:sys_file_reference.imageoverlayPalette;imageoverlayPalette,--palette--;;filePalette
                                            </showitem>
                                        </numIndex>
                                    </types>
                                </overrideChildTca>
                            </config>
                        </TCEforms>
                    </settings.images>
                </el>
            </ROOT>
        </selection>

        <sorting>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:natural_carousel/Resources/Private/Language/locallang.xlf:flexform.tab.sorting
                    </sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                </el>
            </ROOT>
        </sorting>

        <slideSettings>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Slide settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.autoplay>
                        <TCEforms>
                            <label>
                                Wait time
                            </label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.autoplay>
                    <settings.speed>
                        <TCEforms>
                            <label>Transition time</label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.speed>
                    <settings.loop>
                        <TCEforms>
                            <label>
                                Loop
                            </label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.loop>

                    <settings.blur>
                        <TCEforms>
                            <label>
                                Blur
                            </label>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </settings.blur>
                    <settings.effect>
                        <TCEforms>
                            <label>
                                Effect
                            </label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items type="array">
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">
                                            coverflow
                                        </numIndex>
                                        <numIndex index="1">coverflow</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">
                                            slide
                                        </numIndex>
                                        <numIndex index="1">slide</numIndex>
                                    </numIndex>
                                    <numIndex index="3" type="array">
                                        <numIndex index="0">
                                            cube
                                        </numIndex>
                                        <numIndex index="1">cube</numIndex>
                                    </numIndex>
                                    <numIndex index="4" type="array">
                                        <numIndex index="0">
                                            fade
                                        </numIndex>
                                        <numIndex index="1">fade</numIndex>
                                    </numIndex>
                                    <numIndex index="5" type="array">
                                        <numIndex index="0">
                                            flip
                                        </numIndex>
                                        <numIndex index="1">flip</numIndex>
                                    </numIndex>
                                </items>
                                <minitems>0</minitems>
                                <maxitems>1</maxitems>
                            </config>
                        </TCEforms>
                    </settings.effect>
                    <settings.slidesPerView>
                        <TCEforms>
                            <label>
                                Slides per view
                            </label>
                            <config>
                                <type>input</type>
                                <default>1</default>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.slidesPerView>
                    <settings.slideHeight>
                        <TCEforms>
                            <label>
                                Slide height
                            </label>
                            <config>
                                <type>input</type>
                                <default>400</default>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.slideHeight>
                </el>
            </ROOT>
        </slideSettings>


    </sheets>
</T3DataStructure>
